<Window x:Class="MenuManager.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于" Height="550" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0"
                   Text="右键菜单配置工具"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,20">
            <StackPanel>
                <!-- 版本信息 -->
                <TextBlock Text="{Binding VersionText}"
                           FontSize="14"
                           Margin="0,0,0,15"/>

                <!-- 功能介绍 -->
                <TextBlock Text="功能特点："
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="• 自定义 Windows 右键菜单"
                           FontSize="12"
                           Margin="15,0,0,5"/>
                <TextBlock Text="• 支持文件和目录菜单配置"
                           FontSize="12"
                           Margin="15,0,0,5"/>
                <TextBlock Text="• Win11 菜单样式切换"
                           FontSize="12"
                           Margin="15,0,0,5"/>
                <TextBlock Text="• 现代化 WPF 界面"
                           FontSize="12"
                           Margin="15,0,0,15"/>

                <!-- 技术信息 -->
                <TextBlock Text="技术信息："
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="• 基于 .NET 8.0 和 WPF 框架开发"
                           FontSize="12"
                           Margin="15,0,0,5"/>
                <TextBlock Text="• 支持 Windows 10 及以上版本"
                           FontSize="12"
                           Margin="15,0,0,5"/>
                <TextBlock Text="• 需要管理员权限运行"
                           FontSize="12"
                           Margin="15,0,0,15"/>

                <!-- 作者信息 -->
                <TextBlock Text="作者："
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="pengcunfu"
                           FontSize="12"
                           Margin="15,0,0,15"/>

                <!-- 项目仓库 -->
                <TextBlock Text="项目仓库："
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Margin="15,0,0,15">
                    <Hyperlink NavigateUri="https://github.com/pengcunfu/MenuManager.git"
                               RequestNavigate="Hyperlink_RequestNavigate">
                        https://github.com/pengcunfu/MenuManager.git
                    </Hyperlink>
                </TextBlock>

                <!-- 附加信息 -->
                <TextBlock Text="感谢您的使用和支持！"
                           FontSize="12"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 确定按钮 -->
        <Button Grid.Row="2"
                Content="确定"
                Width="80"
                Height="30"
                HorizontalAlignment="Center"
                IsDefault="True"
                IsCancel="True"
                Click="OKButton_Click"
                Margin="0,10,0,0"/>
    </Grid>
</Window>